/*自定义*/
html, body {
	font-family:"Microsoft YaHei", 微软雅黑, "MicrosoftJhengHei", 华文细黑, STHeiti, MingLiu;
	overflow: hidden;
	color: #737373;
}

img.logo{
	max-width: 100%;
	max-height: 100%;
}

.page-body {
	overflow-y: scroll;
}
.page-tabs .navbar-section{
	height: 32px;
	text-align: center;
	overflow: hidden;
	position: relative;
	margin: 0 40px 0 80px;
}
.page-tabs .nav{
	position: absolute;
    display: -webkit-box;
    /*transition: all 0.5s;*/
}
.page-tabs .nav a, .page-tabs .nav a:hover, .page-tabs .nav a:active, .page-tabs .nav a:visited{
	border:1px solid #DDD;
	border-radius: 5px 5px 0 0;
	margin-left: -1px;
	vertical-align: middle;
	color: #737373;
	text-decoration: none;
	display: block;
	padding: 5px 10px;
	width:150px;	
}

.page-tabs .nav a i{
	margin: 3px;
}
.page-tabs .nav a.router-link-active{
	padding-bottom: 8px;
	background: #FFF;
}

/*列表*/
.table {
	table-layout:fixed;
}
.table thead>tr>th{
	text-align: center;
}
.table td{
	/* 超出格子的用省略号 */
	white-space:nowrap;
	overflow:hidden;
	text-overflow:ellipsis;
}
.table td:last-child{
	white-space:normal;
	overflow:visible;
	text-overflow:clip;
}

.level-2>td:first-child{
	text-indent: 10px;
}

.level-3>td:first-child{
	text-indent: 20px;
}

.level-4>td:first-child{
	text-indent: 30px;
}

.level-5>td:first-child{
	text-indent: 40px;
}

.level-6>td:first-child{
	text-indent: 50px;
}

.level-7>td:first-child{
	text-indent: 60px;
}

.level-8>td:first-child{
	text-indent: 70px;
}

.level-9>td:first-child{
	text-indent: 80px;
}

.level-10>td:first-child{
	text-indent: 90px;
}

/* 分页上下留白 */
.pagination, .pager {
    margin: 20px 0;
}

/*表单*/
.form-control-feedback.fa{
	line-height: 34px;
}


.div-striped>div:nth-of-type(odd) {
    background-color: #f5f5f5;
}

.div-striped .form-group {
	padding: 3px 0px 10px 0;
    margin: 0;
}

.form-group>button {
	width: 120px;
	margin:5px;
}


.loginbox .input-group-addon{
	padding: 0;
}

.fa-sort {
	cursor: pointer; 
}

.searchForm{
    margin: 10px 0;
    padding: 10px 0;
    border: 1px dotted #CDC9C9;
}
.searchForm .form-group{
    margin: 5px 0;
}
.dotted{
	border-right: 1px dotted #CDC9C9;
}
.vertical{
	margin-top: 20px;
}
.btn-margin{
	margin-right: 5px;
}

/* 上传按钮 */
.importButton{
	margin-top: 70px;
	margin-bottom: 100px;
	text-align: center;
}
/* 上传按钮 end */

.exportButton{
	height: 50px;
}
.confirm{
	padding-top: 7px;
}